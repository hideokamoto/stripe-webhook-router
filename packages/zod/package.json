{
  "name": "@tayori/zod",
  "version": "0.1.0",
  "description": "Zod schema validation helpers for @tayori/core",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@tayori/core": "workspace:*"
  },
  "peerDependencies": {
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "vitest": "^4.0.0",
    "typescript": "^5.3.0",
    "zod": "^4.2.1"
  },
  "keywords": [
    "webhook",
    "router",
    "typescript",
    "zod",
    "validation",
    "schema"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hideokamoto/stripe-webhook-router"
  },
  "homepage": "https://github.com/hideokamoto/stripe-webhook-router#readme",
  "bugs": "https://github.com/hideokamoto/stripe-webhook-router/issues"
}
