{
  "name": "create-tayori",
  "version": "0.1.0",
  "description": "Scaffolding tool for Tayori webhook handlers",
  "type": "module",
  "bin": {
    "create-tayori": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "prompts": "^2.4.2",
    "picocolors": "^1.0.0",
    "execa": "^8.0.1",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/prompts": "^2.4.9",
    "@vitest/coverage-v8": "^1.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "tayori",
    "stripe",
    "webhook",
    "scaffolding",
    "cli",
    "create"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hideokamoto/stripe-webhook-router"
  },
  "homepage": "https://github.com/hideokamoto/stripe-webhook-router#readme",
  "bugs": "https://github.com/hideokamoto/stripe-webhook-router/issues"
